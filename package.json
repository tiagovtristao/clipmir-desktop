{
  "name": "clipmir-desktop",
  "productName": "clipmir-desktop",
  "version": "0.0.1",
  "description": "A cross platform desktop app for mirroring the clipboard between all synced devices in the same network",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tiagovtristao/clipmir-desktop.git"
  },
  "bugs": "https://github.com/tiagovtristao/clipmir-desktop/issues",
  "keywords": [
    "clipboard",
    "sync",
    "universal"
  ],
  "author": "Tiago Tristao (https://github.com/tiagovtristao)",
  "main": "./app/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --cache --color --ext .jsx,.js src"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "packageManager": "yarn"
      },
      "electronWinstallerConfig": {
        "name": "clipmir_desktop"
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": "",
        "name": "clipmir"
      }
    }
  },
  "dependencies": {
    "electron-compile": "^6.4.3",
    "electron-devtools-installer": "^2.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "get-port-sync": "^1.0.0",
    "jayson": "^2.0.6",
    "node-ssdp": "^3.3.0",
    "react": "^16",
    "react-dom": "^16.4.2",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-es2015-classes": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "electron-forge": "^5.2.2",
    "electron-prebuilt-compile": "2.0.4",
    "eslint": "^3",
    "eslint-config-airbnb": "^15",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsx-a11y": "^5",
    "eslint-plugin-react": "^7"
  }
}
